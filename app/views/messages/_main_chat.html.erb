<div class="chat-header">
  <div class="left-header">
    <div class="header-title">
      <%= @room.name %>
      <%# @roomの値はコントローラーのindexアクションで取得済み %>
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="messages">
  <%= render partial: 'message', collection: @messages %>
  <%# 投稿したメッセージを表示 %>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
<%# <div class="form"> %>
  <%# <div class="left-form"></div> %>
  <div class="form-input">
    <%# <input class="form-message" placeholder= "type a message"> %>
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%# <input type="file" class="hidden"> %>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%# <div class="right-form"></div>自分で考えた文 %>
  <%# <input class="form-submit" type="submit" value="送信"> %>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>
<%# </div> %>